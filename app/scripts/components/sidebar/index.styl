.sidebar
  position fixed
  top 0
  bottom 0
  right sidebarWidth * -1
  width sidebarWidth
  background #303030
  padding-top 50px
  z-index -2
  color #fff
  ul
    padding 0
    margin-top 1em
    list-style none
    border-top 1px solid #777
    &:first-child
      margin-top 0
      border-top 0
  li
    padding 0.75em 1em

body.is-collapsed .sidebar
  right 0
